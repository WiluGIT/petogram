@model IEnumerable<petogram.Models.ApplicationUser>
@{
    ViewBag.Title = "SearchResult";
}

<h2>SearchResult</h2>

<div class="container">

    @foreach (var u in Model)
    {
        <div class="element-cnt">
            <div class="pic-cnt">
                <span class="pic-spn">
                    <img src="@Url.Content(u.ProfilePicture)" style="height:100%; width:100%" />
                </span>
            </div>
            <div class="desc-cnt">
                <span>
                    @u.Name
                </span>
                <br />
                <span>
                    @u.Biography
                </span>
                <br />
                <div class="profile-lisr">
                    <ul>
                        <li>
                            Posts: <strong>@u.Posts.Count</strong>
                        </li>
                        <li style="margin-left:30px;">
                            Followers:
                        </li>
                        <li style="margin-left:30px;">
                            Followees:
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    }
</div>


